# Cache Settings
CACHE_TTL=60000                # Default Cache TTL (Time-To-Live) in milliseconds
CACHE_TTL_HIGH_VIEWERS=30000   # Cache TTL when viewers are high
VIEWERS_THRESHOLD=5000         # Threshold above which TTL will be reduced

# Twitch API credentials
TWITCH_CLIENT_ID=YOUR_CLIENT_ID
TWITCH_CLIENT_SECRET=YOUR_CLIENT_SECRET
TWITCH_ACCESS_TOKEN=YOUR_OAUTH_TOKEN  # optional; auto-refreshes if blank

# The channel you moderate (no leading #)
TWITCH_CHANNEL=your_channel_name

# Chatters-per-organic-view threshold
THRESHOLD=2

# Server & polling settings
PORT=3000
POLL_INTERVAL=15000    # in milliseconds (default: 15000 = 15s)

